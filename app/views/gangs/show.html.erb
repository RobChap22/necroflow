<div class="container w-50">
  <div class="col">
    <div class="card-show mt-5">
      <h1><%= @gang.name %></h1>
      <div class="card-show-body">
        <div class="card-show-territories">
          <% @territories.each do |territory| %>
            <p><%= territory.name %></p>
          <% end %>
          <p><%= link_to new_gang_turf_path(@gang) do %>
              <i class="fas fa-plus"></i>
            <% end %>
          </p>
        </div>
        <% if @gang.house == "Cawdor" %>
          <%= image_tag "cawdor.png" %>
        <% elsif @gang.house == "Chaos Helots" %>
          <%= image_tag "helots.png" %>
        <% elsif @gang.house == "Corpse Grinders" %>
          <%= image_tag "grinders.png" %>
        <% elsif @gang.house == "Delaque" %>
          <%= image_tag "delaque.png" %>
        <% elsif @gang.house == "Escher" %>
          <%= image_tag "escher.png" %>
        <% elsif @gang.house == "Genestealer Cult" %>
          <%= image_tag "gsc.png" %>
        <% elsif @gang.house == "Goliath" %>
          <%= image_tag "goliath.png" %>
        <% elsif @gang.house == "Orlock" %>
          <%= image_tag "orlock.png" %>
        <% elsif @gang.house == "Palanite Enforcers" %>
          <%= image_tag "enforcers.png" %>
        <% elsif @gang.house == "Van Saar" %>
          <%= image_tag "vansaar.png" %>
        <% else %>
          <%= image_tag "other.png" %>
        <% end %>
      </div>
      <div class="card-show-icons">
        <%= link_to gangs_path do %>
          <i class="fas fa-backward"></i>
        <% end %>
        <%= link_to edit_gang_path(@gang) do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to gang_path(@gang), method: :delete, data: { confirm: "Are you sure you want to delete this gang?" } do %>
          <i class="fas fa-skull"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
