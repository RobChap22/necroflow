<!DOCTYPE html>
<html>
  <head>
    <title>NecroFlow</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-transparent">
      <h1 id="navbar-title"><%= link_to "NecroFlow", gangs_path %></h1>
      <p class="navbar-icon float-right">
        <% if user_signed_in? %>
          <%= link_to edit_user_registration_path, :class => 'mr-4' do %>
            <i class="fas fa-edit"></i>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, :class => 'mr-4' do %>
            <i class="fas fa-sign-out-alt"></i>
          <% end %>
        <% else %>
          <%= link_to "Sign_Up", new_user_registration_path, :class => 'navbar-link mr-3'  %>
          <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
      </p>

    </div>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
